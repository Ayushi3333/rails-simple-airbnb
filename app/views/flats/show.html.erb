<div class="flat-details" width='100px' height='100px' background-position='center' background-size='cover'>
<%= image_tag(@flat.url) %>
<h2><%= @flat.name %></h2>
<h3><%= @flat.address %></h3>
<br>
<br>
<h3>A little bit more about this flat...</h3>
<p><%= @flat.description %></p>

<h3>Details</h3>
<i class="fas fa-euro-sign"></i><%= @flat.price_per_night %>
<i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %>
<br>
<%= link_to "Edit flat details", edit_flat_path %>
<br>
<%= link_to "Remove flat", flat_path, method: :delete, data: { confirm: "Are you sure?" } %>
<br>
<%= link_to  "Back to list", flats_path %>
</div>